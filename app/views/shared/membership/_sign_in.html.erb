<% content_for @title= "Connecter" %>

<div class="col-8 col-md-4 col-lg-6 register-form">
    <div class="form container ">
        <div class="note">
            <p>Connexion</p>
        </div>
        <div class="form-content">
                <div class=" jsutigfy-content">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                          <div class="form-group">
                             <%= f.text_field :code_school, class: "form-control", placeholder: "Code DSPS" %>
                          </div>
                          <div class="form-group">
                            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Your Password *" %>
                        </div>
                          <% if devise_mapping.rememberable? %>
                            <div class="field">
                              <%= f.check_box :remember_me %>
                              <%= f.label :remember_me %>
                            </div>
                          <% end %>
                      <div class="actions">
                        <%= f.submit "Connecter", class: " btn btnSubmit" %>
                      </div>
                    <% end %>
                </div>

        </div>
    </div>
</div>
