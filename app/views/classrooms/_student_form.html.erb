
<%= form_with(model: [@promo, @classroom, @student], html: { class: " form-inline float-left"}) do |form| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group m-2">
    <%= form.text_field :name, class: "form-control",
                         placeholder: "Ex: Nom complet" %>
  </div>

  <div class="form-group mr-2">

    <%= form.text_field :contact,class: "form-control",
                         placeholder: "Ex: 44320020" %>
  </div>

  <div class="form-group mr-2">

    <%= form.text_field :mat_nat, class: "form-control",
                         placeholder: "Ex: 07 134 330 R" %>
  </div>

  <div class="form-group mr-2">

    <%= form.text_field :mat_school, class: "form-control",
                         placeholder:" Mat Ecole, Ex: 6001" %>
  </div>

  <div class="actions">
    <%= form.submit "Inscrire", class: 'btn btn-outline-primary mr-2 font-bold' %>
  </div>
<% end %>
