
<%= link_to 'New Promo', new_promo_path %>


<p id="notice"><%= notice %></p>

<h3 class='d-flex justify-content-between mb-4'>
  <span>Promotions</span>
  <%= link_to 'New Promotion', new_promo_path, class: 'btn btn-primary' %>
</h3>

<div class="row">
  <% @promos.each do |promo| %>
    <div class="col-md-4">
        <div class="card notebook-card mb-3">
          <div class="card-body">
            <h5 class='card-title d-flex justify-content-between'>
              <%= link_to promo.title, promo %>
              <div class="dropdown">
                <button class="btn btn-light" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fas fa-ellipsis-h"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                  <%= link_to 'Edit', edit_promo_path(promo), class: 'dropdown-item' %>
                  <%= link_to 'Delete', promo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item' %>
                </div>
              </div>
            </h5>
            <div class="stats mb-4">
              <p class='page-count'>0 classrooms</p>
              <p class='started'>Started <%= time_ago_in_words(promo.created_at) %> ago</p>
            </div>
            <%= link_to "View", promo, class: 'btn btn-primary' %>
          </div>
        </div>
    </div>
  <% end %>
</div>
