<% content_for @title= "Mon Argent" %>

<div class="card mt-40">

</div>
<h3 class='d-flex justify-content-between m-2'>
  <span>Promotions</span>
  <%= link_to  new_promo_path, class: 'btn btn-outline-primary' do %>
  <i class="fa fa-plus-circle" aria-hidden="true"></i> Promotion
  <% end %>
</h3>

<div class="row">
  <% @promos.each do |promo| %>
    <div class="col-md-4">
        <div class="card border-dark mb-2">
          <div class="card-body">
            <h5 class='card-title d-flex justify-content-between'>
              <%= link_to promo do %>
                <button type="button" class="btn bg-gray-300 rounded-r rounded-l">
                  Promotion <span class="badge badge-light"><%= promo.title %></span>
                </button>
              <% end %>
              <div class="dropdown">
                <button class="btn btn-light" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fas fa-ellipsis-h"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                  <%= link_to 'Edit', edit_promo_path(promo), class: 'dropdown-item' %>
                  <%= link_to 'Delete', promo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item' %>
                </div>
              </div>
            </h5>
            <div class="stats mb-4">
              <p class='classroom-count'><%= promo.classrooms.count %> classes</p>

            </div>
            <%= link_to  promo, class: 'btn btn-outline-info' do %>
              <i class="fa fa-plus-circle" aria-hidden="true"></i> Voir Plus
            <% end %>
          </div>
        </div>
    </div>
  <% end %>
</div>
